/* Gallery section  */
.textsec {
  margin-top: 30px;
  letter-spacing: 0.3px;
  font-weight: 700;
  text-align: left;
}
.textsec p,
h1 {
  font-family: "Avenir", sans-serif;
}
.textsec h1 {
  font-size: 18px;
}
.textsec p {
  color: #626262;
  font-weight: 400;
  line-height: 1em;
  letter-spacing: 0;
  font-size: 12px;
}

// shop btn //
.shop-btn {
  border: none;
  font-size: 10px;
  color: #636262;
  background: none;
}
.shop-btn .arrow {
  border: solid #636262;
  border-width: 0 1px 1px 0;
  display: inline-block;
  padding: 2px;
  margin: 0px 4px 1px 8px;
}
.shop-btn .right {
  transform: rotate(-45deg);
}

/* For Responsive - MediaQuery  */
@media (max-width: 767px) {

  //image-collection
  
  .textsec {
    text-align: center;
    margin-bottom: 20px;
  }
  .textsec h1 {
    font-size: 26px;
  }
  .textsec p {
    width: 80%;
    margin-left: 50px;
    font-size: 18px;
  }
}